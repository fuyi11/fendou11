<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_shouji_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/green"
            android:text="点击"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_shouji_next"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="民国了，大清败了"
            android:textSize="13dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/layout_titlebar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textcolor_0">

            <RelativeLayout
                android:id="@+id/rl_yazhen_shoujihao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/indicator">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_ysz_yanzhen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  验证"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ysz_yanzhen"
                        android:text="手机号"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rl_yazhen_shoujihao"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_ysz_grxx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ysz_grxx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    选择"
                        android:textColor="@color/new_gray_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ysz_grxx"
                        android:text="个人信息"
                        android:textColor="@color/new_gray_color" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/rl_ysz_shoujizf"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_zebzr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   选择"
                        android:textColor="@color/new_gray_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_zebzr"
                        android:text="被保障人"
                        android:textColor="@color/new_gray_color" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_ysz_shoujizf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_ysz_shoujizf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付"
                        android:textColor="@color/new_gray_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ysz_shoujizf"
                        android:text="充值"
                        android:textColor="@color/new_gray_color" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/white">


            <EditText
                android:id="@+id/et_sf_tv_sf_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_sf_number"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="手机号"
                android:textSize="14dp" />

            <Button
                android:id="@+id/tv_sf_number"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@color/orange"
                android:text="获取"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/view" />


        <EditText
            android:id="@+id/et_zs_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_zs_name"
            android:background="@null"
            android:hint="验证码"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/view" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_fangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="*接收到验证码大约需要60s*"
                android:textColor="@color/indicator"
                android:textSize="13dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fangshi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"

                android:text="(获取不到验证码请与公众平台客服联系)"
                android:textColor="@color/index_2_2_color"
                android:textSize="13dp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>