<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="#FF9900" />

            <corners android:radius="2dip" />

            <stroke android:width="1dp" android:color="#FF6600" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#FF6600" />

            <corners android:radius="2dip" />

            <stroke android:width="1dp" android:color="#FFFFF0" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_selected="true"><shape android:shape="rectangle">
            <solid android:color="#FFCC33" />

            <corners android:radius="2dip" />

            <stroke android:width="1dp" android:color="#FF6600" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="2dip" />

            <gradient android:centerColor="#FFFFFF" android:endColor="#FF9900" android:startColor="#FF9900"></gradient>

            <stroke android:width="1dp" android:color="#FFCC00" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>